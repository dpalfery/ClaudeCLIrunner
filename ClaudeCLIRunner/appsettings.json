{
  "ClaudeCliConfig": {
    // SECURITY: Update these values for your environment. Do not commit secrets to source control.
    "ClaudeCodeCliPath": "C:\\Program Files\\Claude\\claude.exe",
    "McpEndpoint": "https://mcp.example.com",
    "AzureDevOpsOrg": "myorg",
    "Project": "myproject",
    "Repo": "myrepo",
    "DefaultBranch": "main",
    "PollIntervalSeconds": 60,
    "MaxRetries": 3,
    "MaxTaskDurationMinutes": 60,
    // SECURITY: Do not set AzureDevOpsPat here. Use environment variable CLAUDECLI_AZURE_DEVOPS_PAT instead.
    // "AzureDevOpsPat": "*** NEVER PUT YOUR PAT HERE ***",
    "UseWebhook": false,
    "WebhookPort": 5000,
    "LogLevel": "Information",
    // Security settings
    "RequireHttps": true,
    "MaxConcurrentProcesses": 1,
    "EnableAuditLogging": true,
    "AuditLogPath": "logs/audit.log"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "ClaudeCLIRunner": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
    }
  }
} 