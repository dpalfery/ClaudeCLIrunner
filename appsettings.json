{
  "ClaudeCliConfig": {
    "ClaudeCodeCliPath": "C:\\Program Files\\Claude\\claude.exe",
    "McpEndpoint": "https://mcp.example.com",
    "AzureDevOpsOrg": "myorg",
    "Project": "myproject",
    "Repo": "myrepo",
    "DefaultBranch": "main",
    "PollIntervalSeconds": 60,
    "MaxRetries": 3,
    "MaxTaskDurationMinutes": 60,
    "UseWebhook": false,
    "WebhookPort": 5000,
    "LogLevel": "Information"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "ClaudeCLIRunner": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
    }
  }
} 